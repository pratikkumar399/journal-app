{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Journal API",
      "description": "API endpoints for a journal app"
    },
    "basePath": "/",
    "schemes": [
      "http",
      "https"
    ],
    "securityDefinitions": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT authorization token"
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "paths": {
      "/auth": {
        "post": {
          "tags": [
            "Authentication"
          ],
          "summary": "Authenticate user",
          "description": "Generates JWT token for authentication",
          "parameters": [
            {
              "name": "credentials",
              "in": "body",
              "description": "User credentials",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Authentication successful",
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                }
              }
            },
            "401": {
              "description": "Invalid username or password"
            }
          }
        }
      },
      "": {
        "post": {
          "tags": [
            "Journals"
          ],
          "summary": "Create a journal",
          "description": "Only accessible by teachers",
          "parameters": [
            {
              "name": "journalData",
              "in": "body",
              "description": "Journal data",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "tagged_students": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "published_at": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "attachment": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Journal created successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "description": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/{journalId}": {
        "put": {
          "tags": [
            "Journals"
          ],
          "summary": "Update a journal",
          "description": "Only accessible by teachers",
          "parameters": [
            {
              "name": "journalId",
              "in": "path",
              "description": "ID of the journal",
              "required": true,
              "type": "integer"
            },
            {
              "name": "journalData",
              "in": "body",
              "description": "Journal data",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "tagged_students": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "published_at": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "attachment": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Journal updated successfully"
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Journal not found"
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/{journalId}/publish": {
        "put": {
          "tags": [
            "Journals"
          ],
          "summary": "Publish a journal",
          "description": "Only accessible by teachers",
          "parameters": [
            {
              "name": "journalId",
              "in": "path",
              "description": "ID of the journal",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Journal published successfully"
            },
            "401": {
              "description": "Unauthorized"
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/teachers-feed": {
        "get": {
          "tags": [
            "Journals"
          ],
          "summary": "Get the journal feed for a teacher",
          "description": "Only accessible by teachers",
          "parameters": [],
          "responses": {
            "200": {
              "description": "Successfully retrieved teacher's journal feed"
            },
            "401": {
              "description": "Unauthorized"
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/students-feed": {
        "get": {
          "tags": [
            "Journals"
          ],
          "summary": "Get the journal feed for a student",
          "description": "Only accessible by students",
          "parameters": [],
          "responses": {
            "200": {
              "description": "Successfully retrieved student's journal feed"
            },
            "401": {
              "description": "Unauthorized"
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      }
    }
  }
  